    # nvl clear
    # n "Wait and wait and wait"
    nvl clear
    n "等待等待再等待"

# game/script.rpy:865
translate chinese start_d72618e1:

    # n "All I can do is wait"
    n "我所能做的只有等待"

# game/script.rpy:866
translate chinese start_a45bfaa7:

    # n "Nothing to do but wait"
    n "除了等待别无他法"

